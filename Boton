}
void ejecutar(){
  control();
  imagen();
}
void imagen(){
  background(0,0,0);
}
void control(){

  
}



void dibuja1(){
  // Si el botón del ratón está pulsado encima del cuadrado cambia a verde:
	if (mousePressed == true) {
    
		image("https://cdn.pixabay.com/photo/2013/07/12/18/40/button-153684_640.png",90,90,150,150);
	 }
  
  else {
    
		// Si no, rojo:
    image("https://cdn.pixabay.com/photo/2013/07/12/18/40/button-153682_640.png",90,90,150,150);
  }
  
}
void dibuja2(){
